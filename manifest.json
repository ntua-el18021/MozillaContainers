{
  "manifest_version": 3,
  "name": "Container Profile Manager",
  "version": "1.0",
  "description": "Manages isolated profiles with password protection.",
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "contextualIdentities",
    "activeTab",
    "webNavigation"
  ],

  "action": {
    "default_popup": "./views/popup.html",
    "default_icon": {
      "16": "icons/history-mod.png",
      "48": "icons/history-mod.png",
      "128": "icons/history-mod.png"
    }
  },
  "icons": {
    "16": "icons/history-mod.png",
    "48": "icons/history-mod.png",
    "128": "icons/history-mod.png"
  },
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "commands": {
    "open_history": {
        "suggested_key": {
            "default": "Ctrl+Shift+U"
        },
        "description": "Open Profile History"
    }
  }
  ,
  "web_accessible_resources": [
    {
      "resources": ["views/history.html", "views/profile.html", "scripts/profilePopup/profilePopup.js", "scripts/historyPopup/historyPopup.js"],
      "matches": ["<all_urls>"]
    }
  ]
  
}
